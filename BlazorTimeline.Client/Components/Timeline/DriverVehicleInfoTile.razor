@using BlazorTimeline.Client.Models
@using BlazorTimeline.Client.Components.Timeline

<MudCard Class="@TimelineHelper.GetStatusColorClass(Route.PlannedStartTime, Route.ActualStartTime, true)">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Route.Driver.Name</MudText>
            <MudText Typo="Typo.body2">@Route.Vehicle.Registration</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText>Planned Start: @Route.PlannedStartTime.ToString("HH:mm")</MudText>
        <MudText>Actual Start: @(Route.ActualStartTime?.ToString("HH:mm") ?? "N/A")</MudText>
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public Route Route { get; set; }
}
