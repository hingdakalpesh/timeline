@using BlazorTimeline.Client.Models
@using BlazorTimeline.Client.Components.Timeline

<MudCard Class="@ColorClass" Style="@($"position: absolute; left: {TimelineHelper.CalculateLeftPosition(Delivery.PlannedTime, StartOfDay)}%;")">
    <MudCardContent>
        <MudText Typo="Typo.body2">@Delivery.StoreName</MudText>
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public Delivery Delivery { get; set; }

    [Parameter]
    public DateTime StartOfDay { get; set; }

    [Parameter]
    public string ColorClass { get; set; }
}
